<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Asteroids_App.Views.MainPage"
             Title="NASA Media">
    <CollectionView ItemsSource="{Binding Neos}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="5" Padding="10" BorderColor="Gray">
                    <StackLayout>
                        <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold"/>
                        <Label Text="{Binding Description}" LineBreakMode="WordWrap"/>
                        <Image Source="{Binding Url}" Aspect="AspectFill" HeightRequest="200"/>
                        <Label Text="{Binding MediaType}" FontAttributes="Italic"/>
                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
