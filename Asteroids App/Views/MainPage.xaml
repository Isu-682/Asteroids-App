<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Asteroids_App.Views.MainPage"
             Title="Near Earth Objects">
    <CollectionView ItemsSource="{Binding Neos}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="5" Padding="10" BorderColor="Gray">
                    <StackLayout>
                        <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold"/>
                        <Label Text="Diametro estimado: {Binding EstimatedDiameterMin:F2} - {Binding EstimatedDiameterMax:F2} km"/>
                        <Label Text="Acercamiento: {Binding CloseApproachDate}" />
                        <Label Text="Distancia de paso: {Binding MissDistanceKm:F0} km"/>
                        <Label Text="Peligroso: {Binding IsPotentiallyHazardous}" TextColor="Red"/>
                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>